# DeepSeek API Configuration
# Copy this file to .env.local and fill in your actual values

# DeepSeek API Key (get from https://platform.deepseek.com/)
VITE_DEEPSEEK_API_KEY=sk-your-api-key-here

# DeepSeek API URL
VITE_DEEPSEEK_API_URL=https://api.deepseek.com/v1

# Chat Demo Mode (true = use mock responses only, false = use real API)
VITE_CHAT_DEMO_MODE=true

# Enable streaming responses
VITE_CHAT_STREAM_ENABLED=true

# Maximum messages per conversation
VITE_CHAT_MAX_MESSAGES=20
